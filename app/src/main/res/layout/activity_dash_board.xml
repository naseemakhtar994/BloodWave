<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashBoardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">

   <TextView
       android:layout_width="130dp"
       android:text="Request\nBlood"
       android:onClick="RequestBlood"
       android:background="@color/cardview_dark_background"
       android:textColor="#fff"
android:gravity="center"
       android:layout_margin="15dp"
       android:layout_height="130dp"/>

        <TextView
            android:layout_width="130dp"
            android:text="Donete\nBlood"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_margin="15dp"
            android:onClick="ShowHoapirtal"

            android:layout_height="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="130dp"
            android:text="Current\nBlood\nReq"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:gravity="center"
            android:onClick="CurrentBloodReq"
            android:layout_margin="15dp"
            android:layout_height="130dp"/>

        <TextView
            android:layout_width="130dp"
            android:text="Saved\nBlood\nReq"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_margin="15dp"
android:onClick="RequestHistory"
            android:layout_height="130dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">



        <TextView
            android:layout_width="130dp"
            android:text="Donation\nHistory"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_margin="15dp"
            android:onClick="DonationHistory"

            android:layout_height="130dp"/>


        <TextView
            android:layout_width="130dp"
            android:text="My Total\nRequest\nHistory"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:gravity="center"
            android:onClick="MyRequestHistory"
            android:layout_margin="15dp"
            android:layout_height="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">






        <TextView
            android:layout_width="130dp"
            android:text="All\nDoners"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_margin="15dp"
            android:onClick="AllDoners"

            android:layout_height="130dp"/>

    </LinearLayout>
</LinearLayout>